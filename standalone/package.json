{
  "name": "common-knowledge-scout",
  "version": "0.1.2",
  "description": "Common Knowledge Scout is a modern document management system that helps you organize, search and manage your documents - all in one place and with a unified user interface.",
  "author": "Peter Aichner",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "build:web": "cross-env BUILD_TARGET=web next build",
    "build:electron": "cross-env BUILD_TARGET=electron next build",
    "postbuild": "node scripts/copy-node-modules.js",
    "electron": "cross-env ELECTRON_IS_DEV=false electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && cross-env ELECTRON_IS_DEV=true electron .\"",
    "electron-dev-manual": "cross-env ELECTRON_IS_DEV=true electron .",
    "electron:build": "npm run build && electron-builder --publish=never",
    "electron:win": "npm run build && electron-builder --win --publish=never",
    "electron:mac": "npm run build && electron-builder --mac --publish=never",
    "electron:linux": "npm run build && electron-builder --linux --publish=never",
    "docker:build": "npm run build:web && docker build -t common-knowledge-scout .",
    "docker:run": "docker run -p 3000:3000 common-knowledge-scout"
  },
  "dependencies": {
    "@clerk/nextjs": "^6.21.0",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^3.10.0",
    "@radix-ui/react-alert-dialog": "^1.1.4",
    "@radix-ui/react-avatar": "^1.1.2",
    "@radix-ui/react-checkbox": "^1.1.3",
    "@radix-ui/react-collapsible": "^1.1.10",
    "@radix-ui/react-context-menu": "^2.2.4",
    "@radix-ui/react-dialog": "^1.1.4",
    "@radix-ui/react-dropdown-menu": "^2.1.4",
    "@radix-ui/react-hover-card": "^1.1.4",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-label": "^2.1.1",
    "@radix-ui/react-menubar": "^1.1.4",
    "@radix-ui/react-popover": "^1.1.4",
    "@radix-ui/react-progress": "^1.1.1",
    "@radix-ui/react-radio-group": "^1.2.2",
    "@radix-ui/react-scroll-area": "^1.2.2",
    "@radix-ui/react-select": "^2.1.4",
    "@radix-ui/react-separator": "^1.1.1",
    "@radix-ui/react-slider": "^1.2.2",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-switch": "^1.1.2",
    "@radix-ui/react-tabs": "^1.1.2",
    "@radix-ui/react-toast": "^1.2.4",
    "@radix-ui/react-tooltip": "^1.1.6",
    "@tanstack/react-table": "^8.20.6",
    "@tanstack/react-virtual": "^3.11.2",
    "@types/lodash": "^4.17.14",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/uuid": "^10.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "1.0.0",
    "date-fns": "^3.6.0",
    "dotenv": "^16.5.0",
    "electron-log": "^5.4.1",
    "geist": "^1.3.1",
    "highlight.js": "^11.11.1",
    "jotai": "^2.11.0",
    "jszip": "^3.10.1",
    "lodash": "^4.17.21",
    "lucide-react": "^0.312.0",
    "mime-types": "^2.1.35",
    "mongodb": "^6.16.0",
    "next": "15.2.3",
    "next-auth": "^4.24.11",
    "next-themes": "^0.4.4",
    "nuqs": "^2.4.3",
    "react": "^18.3.1",
    "react-day-picker": "8.10.1",
    "react-dom": "^18.3.1",
    "react-dropzone": "^14.3.5",
    "react-hook-form": "^7.54.2",
    "react-markdown": "^9.0.3",
    "react-resizable-panels": "^1.0.10",
    "react-syntax-highlighter": "^15.6.1",
    "recharts": "^2.15.0",
    "rehype-pretty-code": "^0.14.0",
    "rehype-raw": "^7.0.0",
    "rehype-sanitize": "^6.0.0",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.0",
    "remarkable": "^2.0.1",
    "shiki": "^1.27.0",
    "sonner": "^1.7.2",
    "styled-jsx": "^5.1.7",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^11.1.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.3.0",
    "@shadcn/ui": "^0.0.4",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@types/mime-types": "^2.1.4",
    "@types/node": "^22.15.30",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@types/remarkable": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "electron": "^32.0.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.28.0",
    "eslint-config-next": "15.2.3",
    "postcss": "^8.4.49",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.commonknowledge.scout",
    "productName": "Common Knowledge Scout",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "standalone/**/*",
      "public/**/*",
      "electron/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "standalone/**/*"
    ],
    "extraResources": [
      {
        "from": "standalone",
        "to": "standalone"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "signtoolOptions": {
        "publisherName": "Common Knowledge Scout"
      }
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico"
    }
  }
}